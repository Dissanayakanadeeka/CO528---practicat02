<?xml version="1.0" encoding="UTF-8"?>
<api context="research-groups/v1/{vision}/" name="reserchgroup-vision" xmlns="http://ws.apache.org/ns/synapse">
    <resource methods="GET" uri-template="/">
        <inSequence>
            <call>
                <endpoint key="publish-filter"/>
            </call>
            <datamapper config="resources:datamapper/new-get-mapping/new-get-mapping.dmc" inputSchema="resources:datamapper/new-get-mapping/new-get-mapping_inputSchema.json" outputSchema="resources:datamapper/new-get-mapping/new-get-mapping_outputSchema.json"/>
            <respond/>
        </inSequence>
        <faultSequence>
        </faultSequence>
    </resource>
    <resource methods="GET" uri-template="/publications">
        <inSequence>
            <call description="Fiter the publications">
                <endpoint key="publish-filter"/>
            </call>
            <datamapper config="resources:datamapper/reserch-group-publication-mapper/reserch-group-publication-mapper.dmc" inputSchema="resources:datamapper/reserch-group-publication-mapper/reserch-group-publication-mapper_inputSchema.json" outputSchema="resources:datamapper/reserch-group-publication-mapper/reserch-group-publication-mapper_outputSchema.json"/>
            <respond/>
        </inSequence>
        <faultSequence>
        </faultSequence>
    </resource>
</api>